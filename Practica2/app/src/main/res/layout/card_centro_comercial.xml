<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="100dp"
    app:cardCornerRadius="8dp"
    android:paddingBottom="@dimen/pading_botom"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       >

        <ImageView
            android:id="@+id/imagenCentro"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/saler" />

        <TextView
            android:id="@+id/nombreCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="205dp"
            android:background="@drawable/rounded"
            android:text="Nombre del Centro"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccionCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded"
            android:text="Dirección"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/numTiendasCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="207dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded"
            android:text="Número de tiendas"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>




